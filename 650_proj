model_3<-lm(BPSysAve~BMI+Age+Gender+Race1+Education+DirectChol+Diabetes+PhysActiveDays+SmokeNow+AlcoholYear,data=comp_cases)
summary(model_3)

plot_model(model_3,type="diag",show.data = TRUE)

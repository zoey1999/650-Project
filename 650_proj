model_6 <- lm(BPSysAve ~ BMI + Age + Gender + Race1 + Education + 
    DirectChol + Diabetes + PhysActiveDays + AlcoholYear + SmokeNow + BMI*Race1 + Age*Gender , data = comp_cases)
